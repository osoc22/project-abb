<AuModal
  @modalOpen={{this.municipalities.showModal}}
  @closeModal={{this.municipalities.closeModal}}
>
  <:title>{{this.municipalities.modalData.title}}</:title>
  <:body>
    <C3Chart
      @data={{this.municipalities.modalGraphData}}
      @title={{this.title}}
      @padding={{this.padding}}
    />

  </:body>
  <:footer>
    <AuButton @icon='unordered-list' @iconAlignment='right'>
      <LinkTo
        @route={{'municipality.info'}}
        @model={{this.municipalities.modalData.title}}
        style='color: white;'
      >
        Meer info
      </LinkTo>
    </AuButton>
  </:footer>
</AuModal>
