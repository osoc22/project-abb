<h1>Decisions for {{this.model}}</h1>
<div style='margin-top: 30px;'>
  <AuDataTable
    @content={{this.municipality.decisions}}
    @fields='title description'
    @noDataMessage='Geen data'
    as |t|
  >
    <t.content as |c|>
      <c.header>
        <AuDataTableThSortable
          @field='title'
          @label='Code'
          @class='data-table__header-title'
        /><AuDataTableThSortable
          @field='title'
          @label='Categorie'
          @class='data-table__header-title'
        />
        <AuDataTableThSortable
          @field='description'
          @label='Verandering'
          @class='data-table__header-title'
        />
        <AuDataTableThSortable
          @field='description'
          @label='Datum'
          @class='data-table__header-title'
        />

      </c.header>
      <c.body as |row|>
        <td>
          MAR3423
        </td>
        <td>
          Soep Belastingen
        </td>
        <td>
          +20 euro
        </td><td>
          13/43/13
        </td>
      </c.body>
    </t.content>
  </AuDataTable>
</div>
{{yield}}
